<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Loteria.MainPage"
             Title="Strona główna"
             >

    <ContentPage.Resources>
        <Style TargetType="Button" x:Key="Btn_Main">
            <Setter Property="BackgroundColor" Value="Gray"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="WidthRequest" Value="250"/>
        </Style>
    </ContentPage.Resources>
    <StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="Center">
        <Button Text="GRACZ" Style="{DynamicResource Btn_Main}" Clicked="Btn_GoToPlayerPage_Clicked"/>
        <Button Text="ADMIN" Style="{DynamicResource Btn_Main}" Clicked="Btn_GoToAdminPage_Clicked"/>
        <Button Text="WYNIKI" Style="{DynamicResource Btn_Main}" Clicked="Btn_GoToResultPage_Clicked"/>
        <Button Text="RANKING" Style="{DynamicResource Btn_Main}" Clicked="Btn_GoToRankingPage_Clicked"/>
    </StackLayout>

</ContentPage>
